<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.coronovirus_stranding.view.CoronovirusView
        android:id="@+id/circle"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_get_started"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:visibility="gone"
        android:layout_marginTop="46dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Define your distance from Coronavirus \n Press Scan"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total_death"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total_confirmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_death"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_confirmed"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scan_again"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/tv_province"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:cornerRadius="22dp"
        android:layout_centerHorizontal="true"
        android:text="Scan Again"/>

</RelativeLayout>